{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MOVA Set Action Schema",
  "description": "Schema for set action that assigns values to variables",
  "allOf": [
    {
      "$ref": "./action.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "set"
        },
        "config": {
          "type": "object",
          "required": ["variable", "value"],
          "properties": {
            "variable": {
              "type": "string",
              "description": "Name of the variable to set",
              "minLength": 1,
              "maxLength": 100,
              "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
            },
            "value": {
              "description": "Value to assign to the variable",
              "oneOf": [
                {"type": "string"},
                {"type": "number"},
                {"type": "boolean"},
                {"type": "object"},
                {"type": "array"}
              ]
            },
            "scope": {
              "type": "string",
              "enum": ["local", "global", "workflow"],
              "description": "Scope of the variable",
              "default": "local"
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
